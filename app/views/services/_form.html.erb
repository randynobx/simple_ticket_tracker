        <tr><td><%= f.label :price%></td><td><%= f.text_field :price %></td></tr>
        <tr><td><%= f.label :rate%></td><td><%= f.text_field :rate %></td></tr>
    </table>

    <p>
        <%= f.submit %>
    </p>

<% end %>