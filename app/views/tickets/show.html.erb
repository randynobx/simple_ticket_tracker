<h1>Show Tickets</h1>

<table>
    <tr><td><strong>id</strong></td><td><%= @ticket.id %></td></tr>
    <tr><td><strong>date</strong></td><td><%= @ticket.date %></td></tr>
    <tr><td><strong>account</strong></td><td><%= link_to @account.name, accounts_path(@account) %></td></tr>
    <tr><td><strong>service</strong></td><td><%= link_to @service.category, services_path(@service) %></td></tr>
    <tr><td><strong>materialslist</strong></td><td><%= @ticket.materialslist %></td></tr>
    <tr><td><strong>materialscost</strong></td><td><%= number_to_currency(@ticket.materialscost) %></td></tr>
    <tr><td><strong>labor</strong></td><td><%= number_to_currency(@ticket.labor) %></td></tr>
    <tr><td><strong>total</strong></td><td><%= number_to_currency(@ticket.total) %></td></tr>
    <tr><td><strong>closed</strong></td><td><%= @ticket.closed %></td></tr>
    <tr><td><strong>worklog</strong></td><td><%= @ticket.worklog %></td></tr>
    <tr><td><strong>record id's</strong></td><td>
        <table>
            <tr>
              <th>ID</th>
              <th>Date</th>
              <th>Account</th>
              <th>Ticket</th>
              <th>Income</th>
              <th>Expense</th>
              <th>Total</th>
              <th>Settled</th>
              <th>Notes</th>
              <th>Show</th>
              <th>Edit</th>
            </tr>
            
            <% Record.where(ticket_id: @ticket.id).each do |record| %>
              <tr>
                <td><%= record.id %></td>
                <td><%= record.date %></td>
                <td><%= Account.find(record.account_id).name %></td>
                <td><%= record.ticket_id %></td>
                <td><%= number_to_currency(record.income) %></td>
                <td><%= number_to_currency(record.expense) %></td>
                <td><%= number_to_currency(record.total) %></td>
                <td><%= record.settled %></td>
                <td><%= record.notes %></td>
                <td><%= link_to 'Show', record_path(record) %></td>
                <td><%= link_to 'Edit', edit_record_path(record) %></td>
              </tr>
              </tr>
            <% end %>
        </table>
        </td></tr>

</table>

<%= link_to 'Back to tickets', tickets_path %> | <%= link_to 'Edit', edit_ticket_path(@ticket) %> | <%= link_to 'Destroy', ticket_path(@ticket), method: :delete, data: { confirm: 'Are you sure?' } %>