<h1>Show Tickets</h1>

<table>
    <tr><td><strong>id</strong></td><td><%= @ticket.id %></td></tr>
    <tr><td><strong>date</strong></td><td><%= @ticket.date %></td></tr>
    <tr><td><strong>account</strong></td><td><%= link_to @account.name, accounts_path(@account) %></td></tr>
    <tr><td><strong>service</strong></td><td><%= link_to @service.category, services_path(@service) %></td></tr>
    <tr><td><strong>materialslist</strong></td><td><%= @ticket.materialslist %></td></tr>
    <tr><td><strong>materialscost</strong></td><td><%= number_to_currency(@ticket.materialscost) %></td></tr>
    <tr><td><strong>labor</strong></td><td><%= number_to_currency(@ticket.labor) %></td></tr>
    <tr><td><strong>total</strong></td><td><%= number_to_currency(@ticket.total) %></td></tr>
    <tr><td><strong>closed</strong></td><td><%= @ticket.closed %></td></tr>
    <tr><td><strong>worklog</strong></td><td><%= @ticket.worklog %></td></tr>
    <tr><td><strong>record id's</strong></td><td>
        <% unless @records.empty? %>
          <%= render 'records/listing' %>   
        <% end %>
        <%= link_to 'Add Record', new_ticket_record_path(@ticket.id) %>
      </td></tr>
</table>

<%= link_to 'Up to Tickets', tickets_path %> | <%= link_to 'Edit', edit_ticket_path(@ticket) %>